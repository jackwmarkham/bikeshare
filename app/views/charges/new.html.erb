
<% @bkg = params[:bkg] %>
<% @amount_d = params[:amt] %>
<% @amount = @amount_d.to_i*100 %>
<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: <%= number_to_currency(@amount_d) %></span>

    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Bike Booking ID: <%= @bkg %>"
          data-amount="<%= @amount %>"
          data-locale="auto"></script>
<% end %>
