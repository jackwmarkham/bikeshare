<div class="container">
<p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col s6">
      <h4>My Bookings</h4>
      <% @bookings.each do |booking| %>
        <% if booking.user == current_user  %>
          <div class="card-panel teal">
              <%= booking.user.profile.first_name %></br>
              <%= booking.bike.profile.first_name %></br>
              <%= booking.begin.to_date %></br>
              <%= booking.end.to_date %></br>
              <%= booking.message %></br>
              <%= link_to "Send #{booking.bike.profile.first_name} a message!", conversations_path(sender_id: current_user.id, recipient_id: booking.bike.profile.user.id), method: 'post' %>
              <%= booking.price %></br>
                <% if booking.confirmation == false %>
                  Confirmation Pending
                <% else %>
                  Booking Confirmed
                <% end %></br>
              <%= link_to 'Show', booking %>
              <%= link_to 'Edit', edit_booking_path(booking) %>
              <%= link_to 'Cancel', booking, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col s6">
      <h4>Bookings for my bikes</h4>
        <% @bookings.each do |booking| %>
          <% if booking.bike.profile.user_id == current_user.id %>
            <div class="card-panel teal">
                <%= booking.bike.profile.user_id %>
                <%= booking.user.profile.first_name %></br>
                <%= booking.bike.profile.first_name %></br>
                <%= booking.begin.to_date %></br>
                <%= booking.end.to_date %></br>
                <%= booking.message %></br>
                <%= link_to "Send #{booking.bike.profile.first_name} a message!", conversations_path(sender_id: current_user.id, recipient_id: booking.bike.profile.user.id), method: 'post' %>
                <%= booking.price %></br>
                <% if booking.confirmation == false %>
                  Confirmation Pending
                  <% else %>
                  Booking Confirmed
                <% end %></br>
                <%= link_to 'Show', booking %>
                <%= link_to 'Edit', edit_booking_path(booking) %>
                <%= link_to 'Cancel', booking, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
