<%= simple_form_for(@booking) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
    <% @bid_secure =  params[:b_id].to_i %>
    <%= f.text_field :bike_id, value: @bid_secure, type: "hidden" %>
    <div class="input-field">
        <%= f.label :begin %><br><br>
        <%= f.datetime_select :begin %>
    </div>
    <div class="input-field">
        <%= f.label :end %><br><br>
        <%= f.datetime_select :end %>
    </div>
    <div class="input-field" >
    <%= f.label :message %>


        <%= f.text_area :message, class: "materialize-textarea", placeholder: "Write a message to the lister" %>
</div>
        <%= f.check_box :confirmation %>
        <%= f.label :confirmation, "Confirm this booking" %>
    <br><br>
</div>

<div class="form-actions">
    <%= f.button :submit %>
</div>
<% end %>
